{
    "compilerOptions": {
        "outDir": "dist",
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "rootDir": ".",
        "module": "commonjs",
        "target": "ES2020",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ]
        },
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*"
    ]
}